<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <title>FixMyCity | Signaler un incident</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="app.js" defer></script>
    <link rel="icon" href="/logo.jpg">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <nav>
        <div class="left">
            <img src="/logo.jpg">
            <a href="/">FixMyCity</a>
        </div>
    
        <div class="right">

            <% if (username) { %>
                <p><%= username %></p>
            
            <% } else { %>
            <a href="/login">Se connecter</a>
            <% } %>

        </div>
    </nav>
    
    <h1 class="title">Signaler un nouvel incident</h1>

    <form method="post">
        <div class="formulaire">
        <h2>Description</h2>
        <textarea name="description" rows="15" required></textarea>

        <h2>Adresse</h2>
        <textarea name="adresse" rows="7" required></textarea>

        <br>
        <button type="submit">Soumettre</button>
        </div>
    </form>
</body>

</html>